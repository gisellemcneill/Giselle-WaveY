{
  "type": "module",
  "name": "trivia_discord",
  "version": "1.0.1",
  "description": "this is a trivia bot to play a game with friends",
  "scripts": {
    "register": "node -r dotenv/config src/deploy-commands.js",
    "start": "node -r dotenv/config src/app.js",
    "dev": "nodemon -r dotenv/config src/app.js",
    "prod": "node -r dotenv/config src/app.js",
    "test": "mocha -r esbuild-runner/register ./tests/trivia.spec.js --exit",
    "coverage": "c8 npm test"
  },
   "c8": {
    "all": true,
    "include": ["src/**/*.js"],
    "exclude": [
      "**/*.spec.js",
      "**/*.test.js",
      "tests/**",
      "src/deploy-commands.js"
    ],
    "reporter": ["text", "html"]
  },
  "keywords": [
    "discord",
    "bot",
    "javascript",
    "nodejs"
  ],
  "author": "Shubham Jaiswal <@shubhamjaiswal27>",
  "license": "MIT",
  "dependencies": {
    "ascii-table": "^0.0.9",
    "axios": "^1.13.5",
    "discord.js": "^14.5.0"
  },
  "devDependencies": {
    "@eslint/js": "^10.0.1",
    "c8": "^10.1.3",
    "chai": "^4.3.6",
    "dotenv": "^16.0.2",
    "esbuild": "^0.27.3",
    "esbuild-runner": "^2.2.1",
    "eslint": "^9.39.2",
    "mocha": "^10.0.0",
    "nodemon": "^3.1.11"
  }
}
